{
    "name": "acquia/lightning",
    "type": "drupal-profile",
    "description": "The best of Drupal, curated by Acquia",
    "license": "GPL-2.0-or-later",
    "require": {
        "ext-dom": "*",
        "cweagans/composer-patches": "^1.6",
        "drupal/autosave_form": "1.x-dev",
        "drupal/blazy": "2.x-dev",
        "drupal/core": "~8.8.1 || 8.9.* || 9.0.*",
        "drupal/core_context": "1.x-dev",
        "drupal/ctools": "3.x-dev as 3.2.0",
        "drupal/dropzonejs": "2.0.0-alpha5 as 2.0.0-alpha4",
        "drupal/inline_entity_form": "1.x-dev",
        "drupal/lightning_api": "^4.4 || 4.x-dev",
        "drupal/lightning_core": "^5.0 || 5.x-dev",
        "drupal/lightning_layout": "^2.4 || 2.x-dev",
        "drupal/lightning_media": "^3.15 || 3.x-dev",
        "drupal/lightning_workflow": "^3.14 || 3.x-dev",
        "drupal/media_entity_instagram": "2.x-dev",
        "drupal/media_entity_twitter": "2.x-dev",
        "drupal/metatag": "1.x-dev",
        "drupal/openapi": "1.x-dev",
        "drupal/page_manager": "4.x-dev",
        "drupal/panelizer": "5.x-dev",
        "drupal/search_api": "1.x-dev",
        "drupal/simple_gmap": "1.x-dev",
        "drupal/video_embed_field": "2.x-dev"
    },
    "require-dev": {
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "drupal/drupal-extension": "^3.4",
        "drupal/facets": "^1.2",
        "drupal/media_entity_generic": "1.x-dev",
        "drupal/schema_metatag": "^1.3",
        "drupal/upgrade_status": "^2.0",
        "drush/drush": "^9.7",
        "oomphinc/composer-installers-extender": "^1.1",
        "vijaycs85/drupal-quality-checker": "^1.2",
        "webflo/drupal-core-require-dev": "*",
        "weitzman/drupal-test-traits": "^1.3"
    },
    "config": {
        "preferred-install": {
            "drupal/core": "dist",
            "drupal/lightning_*": "source"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-8.x-4.x": "4.x-dev",
            "dev-flibbertigibbet": "4.x-dev"
        },
        "enable-patching": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "3096566 - Copy media library styles from Seven to Claro & 3096241 - Refactor image and file field widgets to improve contrib compatibility and to make their templates and preprocess functions DRY": "https://www.drupal.org/files/issues/2019-12-16/3096566-23-combined-3096241-3.patch"
            },
            "drupal/consumers": {
                "3042825 - Drupal 9 Deprecated Code Report": "https://www.drupal.org/files/issues/2019-12-25/3042825-16-drupal-9-deprecated-code-report.patch"
            },
            "drupal/contact_storage": {
                "3081195 - Update code deprecated in 8.8": "https://www.drupal.org/files/issues/2020-01-17/8.8_deprecations-3081195-10.patch"
            },
            "drupal/image_widget_crop": {
                "3042648 - Drupal 9 Deprecated Code Report": "https://www.drupal.org/files/issues/2019-03-26/image_widget_crop-fixed_drupal_set_message-3042648-2.patch",
                "2895377 - Convert WebTestBase to BrowserTestBase": "https://www.drupal.org/files/issues/2020-01-16/image_widget_crop-convert_simpletest_to_phpunit-2895377-8.patch"
            },
            "drupal/layout_builder_styles": {
                "3092650 - Remove deprecated function drupal_set_message": "https://www.drupal.org/files/issues/2019-11-06/deprecated-3092650-2.patch"
            },
            "drupal/openapi": {
                "3070671 - Drupal 9 Deprecated Code Report": "https://www.drupal.org/files/issues/2020-01-21/3070671-11.patch"
            },
            "drupal/dropzonejs": {
                "3095062 - Remove deprecated code": "https://www.drupal.org/files/issues/2019-11-25/3095062-4.patch"
            },
            "drupal/entity_browser": {
                "3104611 - remove deprecated EntityBrowserJavascriptTestBase": "https://www.drupal.org/files/issues/2020-01-06/3104611-2.patch"
            },
            "drupal/entity_browser_block": {
                "3097657 - Make Entity Browser Block D9 ready": "https://www.drupal.org/files/issues/2019-11-29/d9_deprecation_3097657_2.patch"
            },
            "drupal/search_api": {
                "3023170 - Test for compatibility with Drupal 9": "https://www.drupal.org/files/issues/2019-12-29/3023170-43--prepare_for_drupal_9.patch"
            },
            "drupal/panels": {
                "3070866 - Drupal 9 replace deprecated function drupal_set_message()": "https://www.drupal.org/files/issues/2019-07-28/3070866-2.patch",
                "3107809 - Make tests run on Drupal core 8.8 and later": "https://www.drupal.org/files/issues/2020-01-21/3107809-2.patch",
                "3107784 - Convert tests to PHPUnit": "https://www.drupal.org/files/issues/2020-01-21/3107784-5.patch"
            },
            "drupal/views_infinite_scroll": {
                "3097542 - Prepare views_infinite_scroll module for Drupal 9": "https://www.drupal.org/files/issues/2019-12-01/3097542-4.patch"
            },
            "drupal/metatag": {
                "3042590 - Drupal 9 Deprecated Code Report": "https://www.drupal.org/files/issues/2020-01-17/metatag-3042590-44.patch"
            },
            "drupal/libraries": {
                "3039243 - Fatal error: Trait method getLibrary has not been applied": "https://www.drupal.org/files/issues/2019-12-09/3039243-9-fatal-error-trait-method-getLibrary.patch",
                "3032159 - Replace usages of the deprecated functions like drupal_set_message and SafeMarkup": "https://www.drupal.org/files/issues/2019-12-07/libraries-d9ready-3032159-4.patch"
            },
            "drupal/video_embed_field": {
                "3097287 - Prepare Video Embed Field for Drupal 9": "https://www.drupal.org/files/issues/2020-01-17/3097287-22.patch"
            },
            "drupal/media_entity_instagram": {
                "3097666 - Make Media entity Instagram D9 Ready": "https://www.drupal.org/files/issues/2020-01-10/3097666-20.patch"
            },
            "drupal/media_entity_twitter": {
                "3097669 - Make media entity twitter D9 ready.": "https://www.drupal.org/files/issues/2020-01-14/3097669_18.patch"
            }
        },
        "patches-ignore": {
            "drupal/lightning_media": {
                "drupal/entity_browser": {
                    "This patch is committed in the dev release": "https://www.drupal.org/files/issues/2018-06-28/2877751-39-8.x-2.x.patch"
                }
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Acquia\\Lightning\\": "src"
        },
        "classmap": [
            "src/Composer/ConfigureLegacyProject.php"
        ]
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "lightning-subprofile"
    ],
    "scripts": {
        "post-install-cmd": [
            "@composer drupal-scaffold",
            "@composer push"
        ],
        "post-update-cmd": [
            "@composer push",
            "@composer package"
        ],
        "configure-tarball": "Acquia\\Lightning\\Composer\\ConfigureLegacyProject::execute",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "enable-asset-packagist": "Acquia\\Lightning\\Composer\\AssetPackagist::execute",
        "nuke": "rm -r -f docroot vendor",
        "package": "Acquia\\Lightning\\Composer\\Package::execute",
        "pull": "cp -R -f ./docroot/profiles/contrib/lightning/* .",
        "push": [
            "rm -r -f ./docroot/profiles/contrib/lightning",
            "mkdir -p ./docroot/profiles/contrib/lightning",
            "@composer archive --file lightning",
            "tar -x -f lightning.tar -C ./docroot/profiles/contrib/lightning",
            "rm lightning.tar"
        ],
        "verify-patched-constraints": "Acquia\\Lightning\\Composer\\PatchedConstraint::execute"
    }
}
